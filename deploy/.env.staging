# Staging Environment Configuration
APP_NAME="Bagisto Staging"
APP_ENV=staging
APP_KEY=
APP_DEBUG=false
APP_URL=http://your-staging-domain.com

# Database
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=bagisto_staging
DB_USERNAME=bagisto_user
DB_PASSWORD=

# Cache
CACHE_DRIVER=redis
CACHE_PREFIX=bagisto_staging

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_DOMAIN=.your-staging-domain.com

# Queue
QUEUE_CONNECTION=redis
QUEUE_DRIVER=redis

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Mail (using file for staging)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@your-staging-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# File System
FILESYSTEM_DISK=local

# Broadcasting (disabled for staging)
BROADCAST_DRIVER=log

# Queue (disabled for staging - using sync)
QUEUE_CONNECTION=sync

# Sanctum
SANCTUM_STATEFUL_DOMAINS=your-staging-domain.com

# Performance optimizations for low-resource VPS
OPCACHE_ENABLE=true
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_MAX_ACCELERATED_FILES=7963
OPCACHE_REVALIDATE_FREQ=0

# MySQL Root Password (for docker-compose)
MYSQL_ROOT_PASSWORD=
GRAFANA_PASSWORD=admin