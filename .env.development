# ==============================================
# Development Environment Configuration
# ==============================================

# Build configuration
BUILD_TARGET=development
DOCKER_IMAGE=bagisto:dev

# Application
APP_NAME="Bagisto Dev"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_PORT=80
VITE_PORT=5173

# Source code mounting (for hot reload)
SOURCE_MOUNT=./workspace/bagisto
MOUNT_MODE=rw

# Database
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=bagisto
DB_USERNAME=bagisto_user
DB_PASSWORD=bagisto_password
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=root_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
